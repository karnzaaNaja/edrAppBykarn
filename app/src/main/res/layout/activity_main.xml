<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_activity_edr" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/edr_notify_logo"
            android:layout_width="150dp"
            android:layout_height="70dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.msi_gl62.edr.font.FontAwesomeTextView
            android:text="&#xf2ba;"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edt_co"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp"
            android:text="มหาวิทยาลัย"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp"
            android:layout_below="@+id/edt_co"
            android:layout_marginTop="5dp"
            android:hint="@string/txt_login"
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text" />

        <com.example.msi_gl62.edr.font.FontAwesomeTextView
            android:text="&#xf2ba;"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edt_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.msi_gl62.edr.font.FontAwesomeTextView
            android:text="&#xf2bc;"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_below="@id/edt_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp"
            android:layout_below="@+id/edt_username"
            android:hint="@string/txt_password"
            android:id="@+id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword" />

        <Button
            android:layout_below="@+id/edt_pass"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/login_btn" />
    </RelativeLayout>



</LinearLayout>
